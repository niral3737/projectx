<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/find_customer_item_letter"
            android:layout_width="@dimen/customer_letter_width"
            android:layout_height="@dimen/customer_letter_height"
            android:padding="5dp"
            android:contentDescription="@string/content_description_letter"
            android:layout_marginTop="1dp" />

        <TextView
            android:id="@+id/find_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Hello"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/find_customer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

</LinearLayout>
