<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/find_product_card_view"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="8dp"
        card_view:cardBackgroundColor="@color/md_grey_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_find_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="Product Name"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/item_product_first_row_text_size" />

                <TextView
                    android:id="@+id/item_find_product_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/find_product_item_end_column_margin_right"
                    android:layout_weight="2"
                    android:text="20"
                    android:textAlignment="textEnd"
                    android:textColor="@color/holo_blue"
                    android:textSize="@dimen/item_product_first_row_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_find_product_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Company"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/item_product_second_row_text_size" />

                <TextView
                    android:id="@+id/item_find_product_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Model"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/item_product_second_row_text_size" />

                <TextView
                    android:id="@+id/item_find_product_blank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/find_product_item_end_column_margin_right"
                    android:layout_weight="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_find_product_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="#Code"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/item_product_second_row_text_size" />

                <TextView
                    android:id="@+id/item_find_product_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Type"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/item_product_second_row_text_size" />

                <TextView
                    android:id="@+id/item_find_product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/find_product_item_end_column_margin_right"
                    android:layout_weight="3"
                    android:text="Rs. 5000"
                    android:textAlignment="textEnd"
                    android:textColor="@color/holo_blue"
                    android:textSize="@dimen/item_product_second_row_text_size" />
            </LinearLayout>

            <View
                android:id="@+id/item_find_product_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
